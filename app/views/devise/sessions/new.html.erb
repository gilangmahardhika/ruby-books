<h3>Log in</h3>
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3 row">
    <%= f.label :email, "Email / Username", class: 'col-md-2 label-control' %>
    <div class="col-md-5">
      <%= f.text_field :email, class: 'form-control', autofocus: true%>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :password, class: 'col-md-2 label-control' %>
    <div class="col-md-5">
      <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>